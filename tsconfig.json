{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@specs/*": ["specs/*"],
      "@sections/*": ["sections/*"],
      "@helpers/*": ["helpers/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@styles/*": ["styles/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@contracts/*": ["contracts/*"],
      "@utils/*": ["utils/*"],
      "@libs/*": ["libs/*"],
      "@store/*": ["store/*"],
      "@hooks/*": ["hooks/*"],
      "@layouts/*": ["layouts/*"],
      "@public/*": ["public/*"],
      "@middlewares/*": ["middlewares/*"],
      "@navigation": ["navigation"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts",
    "index.d.ts"
  ],
  "exclude": ["node_modules"]
}
